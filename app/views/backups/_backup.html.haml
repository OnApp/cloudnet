.modal.input-form.fade{"aria-hidden" => "true", "aria-labelledby" => "restore-backup-label-#{backup.id}", role: "dialog", tabindex: "-1", id: "restore-backup-#{backup.id}" }
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
        %h4.modal-title{id: "restore-backup-label-#{backup.id}"} Restore Backup

      .modal-body
